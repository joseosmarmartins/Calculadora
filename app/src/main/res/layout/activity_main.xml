<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jose.calculadora.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button"
        android:height="80dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button4"
        android:width="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button2"
        android:height="80dp"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:width="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button3"
        android:height="80dp"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/button6"
        android:layout_toEndOf="@+id/button2"
        android:width="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button4"
        android:height="80dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button7"
        android:width="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button5"
        android:height="80dp"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button8"
        android:layout_toStartOf="@+id/button9"
        android:width="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button6"
        android:height="80dp"
        android:layout_below="@+id/button2"
        android:layout_alignEnd="@+id/button9"
        android:layout_toEndOf="@+id/button5"
        android:width="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button7"
        android:height="80dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button10"
        android:width="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button8"
        android:height="80dp"
        android:layout_alignTop="@+id/button7"
        android:layout_alignStart="@+id/button0"
        android:layout_toStartOf="@+id/button12"
        android:width="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button9"
        android:height="80dp"
        android:layout_alignTop="@+id/button8"
        android:layout_alignEnd="@+id/button12"
        android:layout_toEndOf="@+id/button8"
        android:width="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:height="80dp"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true"
        android:width="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button0"
        android:height="80dp"
        android:layout_below="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:width="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:height="80dp"
        android:layout_below="@+id/button8"
        android:layout_toEndOf="@+id/button0"
        android:width="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/buttonMenos"
        android:layout_below="@+id/editText"
        android:height="80dp"
        android:background="#4e4e4e"
        android:layout_alignEnd="@+id/editText"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/buttonMais"
        android:height="80dp"
        android:layout_below="@+id/button3"
        android:background="#4e4e4e"
        android:layout_alignEnd="@+id/buttonMenos"
        android:layout_toEndOf="@+id/button6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/buttonVezes"
        android:height="80dp"
        android:layout_alignTop="@+id/button9"
        android:background="#4e4e4e"
        android:layout_alignEnd="@+id/buttonMais"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/buttonDividir"
        android:height="80dp"
        android:layout_below="@+id/button9"
        android:background="#4e4e4e"
        android:layout_alignEnd="@+id/buttonVezes"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/buttonResultado"
        android:height="80dp"
        android:layout_below="@+id/button10"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonDividir"
        android:background="#4e4e4e" />

</RelativeLayout>
